{
  "name": "vscode-quick-terminals",
  "publisher": "luxass",
  "displayName": "Quick Terminals",
  "version": "0.0.1",
  "description": "Open multiple terminals at the same time.",
  "author": {
    "name": "Lucas Nørgård",
    "email": "lucasnrgaard@gmail.com",
    "url": "https://luxass.dev"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/luxass/vscode-quick-terminals"
  },
  "bugs": {
    "url": "https://github.com/luxass/vscode-quick-terminals/issues"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "engines": {
    "vscode": "^1.68.0"
  },
  "packageManager": "pnpm@8.6.12",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "quick-terminals.open-terminal",
        "title": "Open Terminal",
        "category": "Quick Terminals"
      },
      {
        "command": "quick-terminals.open-terminals",
        "title": "Open Terminals",
        "category": "Quick Terminals"
      }
    ],
    "configuration": {
      "title": "Quick Terminals",
      "properties": {
        "quickTerminals.terminals": {
          "type": "array",
          "description": "The terminals to open on startup.",
          "default": [],
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "The name of the terminal."
              },
              "color": {
                "type": "string",
                "description": "The color of the terminal.",
                "enum": [
                  "terminal.ansiBlack",
                  "terminal.ansiRed",
                  "terminal.ansiGreen",
                  "terminal.ansiYellow",
                  "terminal.ansiBlue",
                  "terminal.ansiMagenta",
                  "terminal.ansiCyan",
                  "terminal.ansiWhite"
                ]
              },
              "cwd": {
                "type": "string",
                "description": "The current working directory of the terminal."
              },
              "command": {
                "type": "string",
                "description": "The command to run in the terminal."
              },
              "show": {
                "type": "boolean",
                "description": "Whether to show the terminal.",
                "default": true
              },
              "shellPath": {
                "type": "string",
                "description": "The path to the shell executable."
              },
              "shellArgs": {
                "description": "The arguments to pass to the shell executable.",
                "oneOf": [
                  {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  {
                    "type": "string"
                  }
                ]
              },
              "env": {
                "type": "object",
                "description": "The environment of the terminal.",
                "additionalProperties": {
                  "type": "string"
                }
              },
              "message": {
                "type": "string",
                "description": "The message to send to the terminal."
              },
              "iconPath": {
                "description": "The path to the icon of the terminal.",
                "oneOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "object",
                    "properties": {
                      "light": {
                        "type": "string"
                      },
                      "dark": {
                        "type": "string"
                      }
                    }
                  },
                  {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "color": {
                        "type": "string",
                        "enum": [
                          "terminal.ansiBlack",
                          "terminal.ansiRed",
                          "terminal.ansiGreen",
                          "terminal.ansiYellow",
                          "terminal.ansiBlue",
                          "terminal.ansiMagenta",
                          "terminal.ansiCyan",
                          "terminal.ansiWhite"
                        ]
                      }
                    }
                  }
                ]
              }
            },
            "additionalProperties": false,
            "required": [
              "name"
            ]
          }
        },
        "quickTerminals.openOnStartup": {
          "type": "boolean",
          "description": "Whether to open the terminals on startup.",
          "default": false
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsup --minify",
    "build": "tsup",
    "dev": "tsup --watch",
    "package": "pnpm vsce package --no-dependencies",
    "release": "pnpm vsce publish --no-dependencies",
    "lint": "eslint --cache .",
    "lint:fix": "pnpm lint --fix",
    "format": "prettier --write . --cache",
    "typecheck": "tsc --noEmit",
    "preinstall": "npx only-allow pnpm"
  },
  "devDependencies": {
    "@luxass/eslint-config": "^4.0.0",
    "@luxass/prettier-config": "^1.2.0",
    "@types/node": "^18.15.7",
    "@types/vscode": "1.92.0",
    "@vscode/vsce": "^3.0.0",
    "eslint": "^8.36.0",
    "prettier": "^3.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.2"
  }
}
